<%- include('../partials/header.ejs')%>
<main>
    <form action = '/events' method = 'POST' class="new-form">
        <div class="new-header">
            <h1>New Event</h1>
            <br>
        </div>

        <div class="form-name">
            <label for="title">Event Name:</label><br>
            <input type="text" id="title" name="title" required>
        </div><br>

        <div class="form-reason">
            <label for="author">Author:</label><br>
            <input type="text" id="author" name="author" required>
        </div><br>

        <div class="start-end-time">
            <label for="starttime">Start (Date and Time):</label>
            <input type="date" id="starttime" name="starttime" required><br>

            <label for="endtime">End (Date and Time):</label>
            <input type="date" id="endtime" name="endtime" required><br>
        </div> <br>

        <div class="form-category">
            <label for="location">Location:</label>
            <select name="location" class="location" size="1" id="location" required>
                <option value="" disabled selected>Pick One</option>
                <option value="main-field">Main Field</option>
                <option value="maze">Corn Field</option>
                <option value="hanted-house">Haunted House Picnic Tables</option>
                <option value="pumpkin-carving">Pumpkin Field</option>
                <option value="Other">Other</option>
            </select>
        </div><br>

        <div class="form-name">
            <label for="content">Skill Level:</label><br>
            <input type="text" id="content" name="content" required>
        </div><br>

        <div class="form-pic">
            <label for="image">Event Picture:</label><br>
            <input type="file" class="guest-pic" accept="image/*" id=pic>
        </div><br><br>

        <div class="button">
            <input type="submit" value="Submit">
            <input type="reset" value="Clear">
        </div>
    </form>
</main>

    <%- include('../partials/footer.ejs')%>